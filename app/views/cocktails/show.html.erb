<h1><%= @cocktail.name %></h1>
<p><%= link_to "Add doses", new_cocktail_dose_path(@cocktail)  %></p>

<div class="card" id="ingredient" style="width: 24rem;">
  <div class="card-header" id="list-ingredient">
        Ingredient
  </div>
          <% @cocktail.doses.each do |dose| %>
            <div class= "inline-indredient">
              <ul>
              <li class="list-group-item"><%= dose.ingredient.name %></li>
              <li class="list-group-item"><%= dose.description %></li>
              <li><%= link_to cocktail_dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %></li>
              </ul>
            </div>
          <% end %>
</div>
<br>
<h2 class="btn btn-ghost"><%= link_to "Home", root_path  %> </h2>



