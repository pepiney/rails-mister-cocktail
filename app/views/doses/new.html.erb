<h1>Create a Dose</h1>

<div class="container">
  <div class="row">
    <div class="col-4">
      <%= simple_form_for [ @cocktail, @dose ] do |f| %>
        <%= f.association :ingredient, input_html: { class: "beautiful-dropdown" }, include_hidden: false %>
        <%= f.input :description %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
      <%= link_to "Return", cocktail_path(@cocktail) %>
    </div>
  </div>
</div>
